<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quicabotMap.QuicabotMapPage">


    <androidx.cardview.widget.CardView
        style="@style/insepction_result_content_card"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <transforma.qb2_user_app.quicabotMap.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                style="@style/general_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QuicaBot Map"
                android:layout_marginTop="8dp"
                android:textColor="#fff2d9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"

                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/map_legend"/>

            <TextView
                android:id="@+id/mapLegend"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1m"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:textColor="#fff2d9"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/guidelineEnd" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.85" />




        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>




    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.70" />


    <Button
        android:id="@+id/buttonGenerateMap"
        style="@style/button_inspection_mode_command"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:onClick="generateMap"
        android:text="Generate Map"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline3" />


    <Switch
        android:id="@+id/baseControlSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchPadding="10dp"
        android:checked="false"
        android:onClick="SwitchingControl"
        android:text="Enable"
        android:textColor="@color/colorSecondary"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline3"
        app:layout_constraintBottom_toTopOf="@id/joystickView"/>


    <io.github.controlwear.virtual.joystick.android.JoystickView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/joystickView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        custom:JV_enabled="false"
        custom:JV_autoReCenterButton="true"
        custom:JV_backgroundColor="@color/colorSecondary"
        custom:JV_borderColor="@color/colorSecondaryDark"
        custom:JV_borderWidth="2dp"
        custom:JV_buttonColor="@color/colorSecondaryDark"
        custom:JV_buttonSizeRatio="20%"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toEndOf="@id/guideline3"  />


</androidx.constraintlayout.widget.ConstraintLayout>