<?xml version="1.0" encoding="utf-8"?>
<launch>
  <arg name="scan_topic" default="/scan"/>
  <arg name="imu_topic" default="/imu"/>
  <arg name="odom_topic" default="/odom"/>
<!-- cartographer -->
  <!--    do the following for mapping mode-->

        <!-- <remap to="/odom" from="/odometry/filtered" /> -->
    <node name="cartographer_node" pkg="cartographer_ros"
          type="cartographer_node" args="
          -configuration_directory $(find mobileman_navigation)/config
                   -configuration_basename mobileman.lua"
          output="screen">
        <remap to="$(arg scan_topic)" from="scan"/>
        <remap to="$(arg imu_topic)" from="imu"/>
        <remap to="$(arg odom_topic)" from="odom"/>
    </node>
    

  <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
      type="cartographer_occupancy_grid_node" args="-resolution 0.05" />
  
</launch>