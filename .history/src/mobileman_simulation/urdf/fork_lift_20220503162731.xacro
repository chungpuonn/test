<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <link name="Link1">
    <inertial>
      <!--      <origin-->
      <!--         xyz="0.30661 0.13018 0"-->
      <!--        rpy="0 0 0" />-->
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="10.512" />
      <inertia ixx="0.12168" ixy="-6.1853E-17" ixz="-1.0133E-15" iyy="0.36652" iyz="3.4411E-17" izz="0.25354" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://mobileman_simulation/meshes/Link1.STL" />
      </geometry>
      <material name="">
        <color rgba="0.5 0.5 0.5 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://mobileman_simulation/meshes/Link1.STL" />
      </geometry>
    </collision>
  </link>
  <joint name="fork_rotational_joint" type="revolute">
    <origin xyz="0.0975 0 0.409" rpy="1.5708 0 3.1416" />


    <parent link="${base_link}" />
    <child link="Link1" />
    <axis xyz="0 0 1" />
    <limit lower="0" upper="1.57" effort="1000" velocity="0" />
    <dynamics damping="10" friction="100" />
  </joint>
  <link name="Link2">
    <inertial>
      <!-- <origin
        xyz="0.1 0.13165 -0.3945"
        rpy="0 0 0" /> -->
      <origin xyz="0.12 -0.5525 -0.2" rpy="-3.14 0 1.57" />
      <mass value="7.4392" />
      <inertia ixx="0.26451" ixy="-4.5117E-15" ixz="-1.2876E-14" iyy="0.22881" iyz="-0.00005000" izz="0.10508" />
    </inertial>
    <visual>
      <origin xyz="0.12 -0.5525 -0.2" rpy="-3.14 0 1.57" />
      <!-- TODO: The following values could be a better candidate for the robot
            <origin
        xyz="0.1 0.13165 -0.3945"
        rpy="0 0 0" /> -->
      <geometry>
        <mesh filename="package://mobileman_simulation/meshes/Link2.STL" />
      </geometry>
      <material name="">
        <color rgba="0.75294 0.75294 0.75294 1" />
      </material>
    </visual>
    <collision>
      <!-- <origin
        xyz="0 0 0"
        rpy="0 0 0" /> -->
      <origin xyz="0.12 -0.5525 -0.2" rpy="-3.14 0 1.57" />
      <geometry>
        <mesh filename="package://mobileman_simulation/meshes/Link2.STL" />
      </geometry>
    </collision>
  </link>
  <joint name="fork_linear_joint" type="prismatic">
    <origin xyz="0.12 0 0.5525" rpy="1.57 0 1.57" />
    <parent link="Link1" />
    <child link="Link2" />
    <!-- <axis xyz="-1 0 0" /> -->
    <axis xyz="0 0 -1" />
    <limit lower="0" upper="0.5" effort="1000" velocity="0" />
  </joint>
  <gazebo reference="Link1">
    <material>Gazebo/DarkGrey</material>
  </gazebo>
  <gazebo reference="Link2">
    <material>Gazebo/DarkGrey</material>
  </gazebo>
  <xacro:if value="${isSimulation}">
    <transmission name="fork_rotational_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="fork_rotational_joint">
        <hardwareInterface>hardware_interface/PositionJointInterface
</hardwareInterface>
      </joint>
      <actuator name="motor1">
        <hardwareInterface>hardware_interface/PositionJointInterface
</hardwareInterface>
        <mechanicalReduction>100</mechanicalReduction>
      </actuator>
    </transmission>

    <transmission name="fork_linear_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="fork_linear_joint">
        <hardwareInterface>hardware_interface/PositionJointInterface
</hardwareInterface>
      </joint>
      <actuator name="motor2">
        <hardwareInterface>hardware_interface/PositionJointInterface
</hardwareInterface>
        <mechanicalReduction>100</mechanicalReduction>
      </actuator>
    </transmission>
  </xacro:if>
</robot>